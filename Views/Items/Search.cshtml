@model IEnumerable<ShoppingList.Models.Item>

<h1> My Items!</h1>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr class="table-secondary">
            <th>Name </th>
            <th>Details </th>
            <th>Amount </th>
            <th>Actions </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Name </td>
                <td> @item.Details </td>
                <td> @item.Amount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> Edit </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Delete </a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p> No items available in the database! </p>
}


